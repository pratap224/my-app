<h1>Listing Post</h1>
<%= link_to 'New ', posts_new_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'Show',  posts_show_path %></td>
      <td><%#= link_to 'Edit', edit_post_path(post) %></td>
      <td><%#= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
